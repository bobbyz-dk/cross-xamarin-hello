<Page
    x:Class="HelloWorldXamarinWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HelloWorldXamarinWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
		<TextBlock x:Name="textBlock" TextWrapping="Wrap" Text="Write your name" VerticalAlignment="Top" FontSize="21.333"/>
		<TextBox x:Name="txtName" TextWrapping="Wrap" VerticalAlignment="Top" PlaceholderText="here"/>
		<Button x:ConnectionId='1' x:Name="btnHello" Content="Hello" VerticalAlignment="Top" HorizontalAlignment="Stretch"                       />
		<TextBlock x:Name="lblHello" TextWrapping="Wrap" Text="-" VerticalAlignment="Top" FontSize="26.667" TextAlignment="Center"/>

	</StackPanel>
</Page>

